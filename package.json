{
  "version": "0.1.7-3",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "tailwind-config.js"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "NODE_ENV=production tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint src/**/*.tsx",
    "prepare": "NODE_ENV=production tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "view-tailwind": "tailwind-config-viewer -o"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-dom": ">=16",
    "tailwindcss": ">=2"
  },
  "dependencies": {
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/postcss7-compat": "^2.0.3",
    "deepmerge": "4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint src/**/*.tsx",
      "pre-push": "tsdx test"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none"
  },
  "name": "@apideck/components",
  "author": "Jake Prins",
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/components.esm.js",
  "size-limit": [
    {
      "path": "dist/components.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/components.esm.js",
      "limit": "20 KB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/apideck-io/components.git"
  },
  "homepage": "https://github.com/apideck-io/components#readme",
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@size-limit/preset-small-lib": "^4.10.1",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/addons": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "autoprefixer": "^9",
    "babel-loader": "^8.2.2",
    "classnames": "^2.2.6",
    "husky": "4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rollup-plugin-postcss": "^4.0.0",
    "size-limit": "^4.10.1",
    "tailwind-config-viewer": "^1.5.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/components/*.tsx"
    ]
  }
}
