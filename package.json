{
  "version": "0.8.1-0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "NODE_ENV=production tsdx build && yarn build-tailwind",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "test:coverage": "tsdx test --coverage",
    "lint": "tsdx lint src/**/*.tsx",
    "prepare": "NODE_ENV=production tsdx build && yarn build-tailwind",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006 --no-manager-cache",
    "build-storybook": "build-storybook",
    "view-tailwind": "tailwind-config-viewer -o",
    "release": "NODE_ENV=production tsdx build && np",
    "build-tailwind": "NODE_ENV=production npx tailwindcss -o ./dist/styles.css --minify"
  },
  "peerDependencies": {
    "@headlessui/react": ">= 1",
    "react": ">=16",
    "react-dom": ">=16",
    "tailwindcss": ">=3"
  },
  "dependencies": {
    "deepmerge": "4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint src/**/*.tsx",
      "pre-push": "tsdx test"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "none"
  },
  "name": "@apideck/components",
  "author": "Jake Prins",
  "keywords": [
    "react",
    "tailwindcss",
    "components",
    "apideck"
  ],
  "publishConfig": {
    "access": "public"
  },
  "module": "dist/components.esm.js",
  "size-limit": [
    {
      "path": "dist/components.cjs.production.min.js",
      "limit": "20 KB"
    },
    {
      "path": "dist/components.esm.js",
      "limit": "20 KB"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/apideck-io/components.git"
  },
  "homepage": "https://github.com/apideck-io/components#readme",
  "devDependencies": {
    "@babel/core": "^7.16.12",
    "@headlessui/react": "^1.4.3",
    "@size-limit/preset-small-lib": "^4.10.1",
    "@storybook/addon-essentials": "^6.4.17",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "next",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.4.17",
    "@tailwindcss/forms": "^0.4.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^12.8.3",
    "@types/classnames": "^2.2.11",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "autoprefixer": "^10.4.2",
    "babel-jest": "^27.4.6",
    "babel-loader": "^8.2.3",
    "classnames": "^2.2.6",
    "husky": "4.3.8",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^8.4.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.2",
    "size-limit": "^4.10.1",
    "storybook-addon-themes": "^6.1.0",
    "tailwind-config-viewer": "^1.6.3",
    "tailwindcss": "^3.0.18",
    "tsdx": "^0.14.1",
    "tslib": "^2.1.0",
    "typescript": "^4.5.5"
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "src/components/*.tsx"
    ]
  }
}
